@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Welcome to Qbicles | Let's get you set up</title>
    <link rel="shortcut icon" type="image/x-icon" href="/Content/DesignStyle/img/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/DesignStyle/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/DesignStyle/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/DesignStyle/img/favicon-16x16.png">
    
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700|Lato:300,400,500,600,700" />
    @Styles.Render("~/Content/qbiclescss")
    @Qbicles.Web.Helper.HtmlHelpers.LocalizedJsBundle("~/Scripts/ErrorMessages")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body style="padding: 0; margin: 0;">

    <div class="fswrap" style="background-image: url('/Content/DesignStyle/img/rb007.jpg'); background-position: right center;">

        <section class="pricing">
            <div class="container-fluid">

                <div class="mdv2-col-dash">

                    <div class="row">

                        <!-- Plus Tier -->
                        <div class="col-12">
                            <div class="card animated fadeIn" style="width: auto; padding-top: 20px">
                                <img src="~/Content/DesignStyle/img/icon_qbicle_default.png" style="margin: 0 auto;">
                                <div class="card-body" style="padding: 0 20px 40px 20px !important;">

                                    <h6 class="card-price text-center" style="padding-bottom: 0;">Email verification complete</h6>

                                    <p style="font-size: 14px; line-height: 1.7;">Your address has been successfully verified, and can now be used as part of Sales &amp; Marketing email campaigns. To continue, hit the button below to log into Qbicles.</p>

                                    <br />
                                    <div class="text-center">
                                        <a href="/" class="btn community-button lg btn-info w-auto">Go to Qbicles</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </section>

    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>