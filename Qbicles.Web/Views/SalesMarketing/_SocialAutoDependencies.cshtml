@{
    var netwokType = (int)ViewBag.NetwokType;
    var brands = (int)ViewBag.Brands;
    var ideaThemes = (int)ViewBag.IdeaThemes;
    var segments = (int)ViewBag.Segments;
    var type = (int)ViewBag.Type;
}
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Before you start building your Campaign...</h5>
        </div>
        <div class="modal-body">

            <div class="notifications_overview">

                <div class="well custom" style="padding-bottom: 5px;">

                    <ul>
                        @if (type == 0 && netwokType == 0)
                        {
                            <li style="background: #fff; margin-bottom: 10px;">
                                <div class="notify_avatar" style="border-radius: 0; background-image: url('/Content/DesignStyle/img/icon_socialpost.png');"></div>
                                <div class="notify_detail" style="margin-left: 30px;">
                                    <p style="margin-bottom: 10px;">You need to have at least one linked <strong>Social Account</strong> to post from your Campaign. Click the button below and we'll guide you through linking your first account.</p>
                                    <button class="btn btn-info" data-dismiss="modal" onclick="$('#config').trigger('click');"><i class="fa fa-link"></i> &nbsp; Link an Account</button>
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        }

                        @if (brands == 0)
                        {
                            <li style="background: #fff; margin-bottom: 10px;">
                                <div class="notify_avatar" style="border-radius: 0; background-image: url('/Content/DesignStyle/img/icon_medal.png');"></div>
                                <div class="notify_detail" style="margin-left: 30px;">
                                    <p style="margin-bottom: 10px;">You need to have at least one <strong>Brand</strong> to assign to your Campaign. You can manage these from the Brands section. Click the button below and we'll walk you through setting up your first Brand.</p>
                                    <button class="btn btn-success" data-dismiss="modal" data-toggle="modal" data-target="#app-marketing-brand-add"><i class="fa fa-plus"></i> &nbsp; Create a Brand</button>
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        }
                        @if (ideaThemes == 0)
                        {
                            <li style="background: #fff; margin-bottom: 10px;">
                                <div class="notify_avatar" style="border-radius: 0; background-image: url('/Content/DesignStyle/img/paint.png');"></div>
                                <div class="notify_detail" style="margin-left: 30px;">
                                    <p style="margin-bottom: 10px;">You need to have at least one <strong>Theme</strong> to assign to your Campaign. You can manage these from Ideas &amp; Themes. Click the button below and we'll get you started.</p>
                                    <button class="btn btn-success" data-dismiss="modal" data-toggle="modal" data-target="#app-marketing-idea-add"><i class="fa fa-plus"></i> &nbsp; Create a Theme</button>
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        }
                        @if (type == 3 && segments == 0)
                        {
                            <li style="background: #fff; margin-bottom: 10px;">
                                <div class="notify_avatar" style="border-radius: 0; background-image: url('/Content/DesignStyle/img/icon_process.png');"></div>
                                <div class="notify_detail" style="margin-left: 30px;">
                                    <p style="margin-bottom: 10px;">You need to have at least one <strong>Segment</strong> to assign to your Email Campaign. You can manage these from Segment. Click the button below and we'll get you started.</p>
                                    <button class="btn btn-success" data-dismiss="modal" data-toggle="modal" data-target="#app-marketing-segment-add"><i class="fa fa-plus"></i> &nbsp; Create a Segment</button>
                                </div>
                                <div class="clearfix"></div>
                            </li>
                        }
                    </ul>

                </div>

            </div>



            <br />
            <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
            @if (type == 0)
            {
                <button class="btn btn-warning" data-dismiss="modal" data-toggle="modal" onclick="SMSocialCampaignAdd();" data-target="#app-marketing-social-campaign-add">Skip &nbsp; <i class="fa fa-angle-right"></i></button>
            }
            else if (type == 1)
            {
                <button class="btn btn-warning" data-dismiss="modal" data-toggle="modal" onclick="SMManualSocialCampaignAdd();" data-target="#app-marketing-manual-social-campaign-add">Skip &nbsp; <i class="fa fa-angle-right"></i></button>

            }
            else
            {
                <button class="btn btn-warning" data-dismiss="modal" data-toggle="modal" onclick="EmailCampaignAdd();" data-target="#app-marketing-email-campaign-add">Skip &nbsp; <i class="fa fa-angle-right"></i></button>
            }

        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
