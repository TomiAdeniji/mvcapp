                    <td>
                        @{
                            var social_accounts = item.CampaignPost.SharingAccount;
                            var lstAcs = new List<AccountNetworkCustomeModel>();
                            foreach (var it in social_accounts)
                            {
                                if (it.Type.Name == "FaceBook")
