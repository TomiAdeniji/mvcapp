<div class="modal fade left" id="app-marketing-loyalty-edit" role="dialog" aria-labelledby="app-marketing-loyalty-edit">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title">Edit Loyalty Program</h5>
            </div>
            <div class="modal-body">

                <div class="well custom">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="name">Program name <span class="red">*</span></label>
                                <input type="text" name="name" class="form-control" value="Burger Delight">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="name">Ends <span class="red">*</span></label>
                                <input type="text" name="ends" class="form-control singledate" value="04/01/2021">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="description">Description <span class="red">*</span></label>
                                <textarea name="description" class="form-control">A short burst drive to increase burger sales and customer advocacy returns through the closing period.</textarea>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="name">Active <span class="red">*</span></label>
                                <td><div class="checkbox toggle"><label><input data-toggle="toggle" data-onstyle="success" data-on="Yes" data-off="No" type="checkbox" checked></label></div></td>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="loyalty-criteria">Eligibility criteria</label>
                                <select name="loyalty-criteria" id="criteria" class="form-control select2" style="width: 100%;"
                                onchange="$('.toggleable').hide(); var route = '#' + $(this).val(); $(route).show();">
                                    <option value=""></option>
                                    <option value="c1" selected>Item purchase</option>
                                    <option value="c2">Referral</option>
                                    <option value="c3">Minimum spend</option>
                                    <option value="c4">Transaction count</option>
                                    <option value="c5">Visit count</option>
                                </select>                                            
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 criteria_routes">

                            <!-- Item purchase -->
                            <div class="form-group" id="c1">
                                <label for="items_list">Choose eligible item(s)</label>
                                <select name="items_list" class="form-control checkmulti" style="width: 100%;" multiple>
                                    <optgroup label="Category 1">
                                        <option value="0-1">Any in Category 1</option>
                                        <option value="0-2" selected>Item 1</option>
                                        <option value="0-3" selected>Item 2</option>
                                        <option value="0-4">Item 3</option>
                                        <option value="0-5">Item 4</option>
                                    </optgroup>
                                    <optgroup label="Category 2">
                                        <option value="1-1">Any in Category 2</option>
                                        <option value="1-2">Item 1</option>
                                        <option value="1-3">Item 2</option>
                                        <option value="1-4">Item 3</option>
                                        <option value="1-5">Item 4</option>
                                    </optgroup>
                                </select>
                            </div>
                            <!-- END Item purchase -->


                            <!-- Referral -->
                            <div class="form-group toggleable" id="c2" style="display: none;">
                                <label for="referrals">Referral count</label>
                                <input type="number" name="referrals" class="form-control">
                            </div>
                            <!-- END Referral -->


                            <!-- Spend -->
                            <div class="form-group toggleable" id="c3" style="display: none;">
                                <label for="spend">Minimum spend (&#8358;)</label>
                                <input type="number" name="spend" class="form-control">
                            </div>
                            <!-- END Spend -->


                            <!-- Transaction count -->
                            <div class="form-group toggleable" id="c4" style="display: none;">
                                <label for="transactions">Transaction count</label>
                                <input type="number" name="transactions" class="form-control">
                            </div>

                            <!-- Visits -->
                            <div class="form-group toggleable" id="c5" style="display: none;">
                                <label for="visits">Visit count</label>
                                <input type="number" name="visits" class="form-control">
                            </div>
                            <!-- END Visits -->


                        </div>
                    </div>


                    <div class="row">

                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="loyalty-award">Reward</label>
                                <select name="loyalty-award" id="award" class="form-control select2" style="width: 100%;"
                                onchange="$('.toggleable2').hide(); var reward = '#' + $(this).val(); $(reward).show();">
                                    <option value=""></option>
                                    <option value="a1" selected>Points</option>
                                    <option value="a2">Discount</option>
                                    <option value="a3">Cashback</option>
                                    <option value="a4">Gift</option>
                                </select>
                            </div>
                        </div>


                        <div class="col-xs-12 col-sm-6 award_routes">

                            <!-- Points -->
                            <div class="form-group toggleable2" id="a1">
                                <label for="award-points">Points awarded</label>
                                <input type="number" name="points" class="form-control" value="10">
                            </div>
                            <!-- END Points -->


                            <!-- Discount -->
                            <div id="a2" class="toggleable2" style="display: none;">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-4 col-lg-3">
                                        <div class="form-group">
                                            <label for="discount_percent">Discount %</label><br />
                                            <input type="number" name="discount_percent" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-8 col-lg-9">
                                        <div class="form-group">
                                            <label for="discount_subject">Discount applies to</label>
                                            <select name="discount_subject" class="form-control select2" style="width: 100%;">
                                                <option value=""></option>
                                                <option value="0">All items (unrestricted)</option>
                                                <optgroup label="Category 1">
                                                    <option value="0-1">Any in Category 1</option>
                                                    <option value="0-2">Item 1</option>
                                                    <option value="0-3">Item 2</option>
                                                    <option value="0-4">Item 3</option>
                                                    <option value="0-5">Item 4</option>
                                                </optgroup>
                                                <optgroup label="Category 2">
                                                    <option value="1-1">Any in Category 2</option>
                                                    <option value="1-2">Item 1</option>
                                                    <option value="1-3">Item 2</option>
                                                    <option value="1-4">Item 3</option>
                                                    <option value="1-5">Item 4</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END Discount -->


                            <!-- Cashback -->
                            <div class="toggleable2" id="a3" style="display: none;">
                                <label for="cashback_amount">Cashback amount</label>
                                <div class="input-group">
                                    <span class="input-group-addon">&#8358;</span>
                                    <input type="number" name="cashback_amount" class="form-control">
                                </div>
                            </div>
                            <!-- END Cashback -->


                            <!-- Cashback -->
                            <div class="form-group toggleable2" id="a4" style="display: none;">
                                <label for="items_list">Choose item to gift</label>
                                <select name="items_list" class="form-control select2" style="width: 100%;">
                                    <option value=""></option>
                                    <optgroup label="Category 1">
                                        <option value="0-2">Item 1</option>
                                        <option value="0-3">Item 2</option>
                                        <option value="0-4">Item 3</option>
                                        <option value="0-5">Item 4</option>
                                    </optgroup>
                                    <optgroup label="Category 2">
                                        <option value="1-2">Item 1</option>
                                        <option value="1-3">Item 2</option>
                                        <option value="1-4">Item 3</option>
                                        <option value="1-5">Item 4</option>
                                    </optgroup>
                                </select>
                            </div>
                            <!-- END Cashback -->


                        </div>
                    </div>


                </div> <!-- ./activity-overview -->


                <br />
                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" data-dismiss="modal">Confirm</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->