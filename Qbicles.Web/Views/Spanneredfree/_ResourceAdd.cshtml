
@{
    ViewBag.Title = "Detail";
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Add a Resource</h5>
        </div>
        <div class="modal-body">

            <div class="well custom">
                <form name="media-overview">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-title">Document name</label>
                                <input type="text" name="media-title" class="form-control">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="topic">Choose a topic</label>
                                <select name="folder" class="form-control select2" style="width: 100%;">
                                    <option value="0">General</option>
                                    <option value="1">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="account_number">Choose a file</label>
                                <input type="file" class="form-control previewimg" name="featuredimg" data-target='#preview'>
                            </div>

                            <img id="preview" src="" alt="Your image" style="display: none; width: 100%; height: auto; margin-bottom: 30px;" />
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="tags">Destination folder</label>
                                <select name="folder" class="form-control select2" style="width: 100%;" disabled>
                                    <option value="0">General</option>
                                    <option value="1" selected>Example Social Campaign</option>
                                    <option value="2">Ad Campaign / My Ad Campaign 1</option>
                                    <option value="3">Email Campaign / My Email Campaign 1</option>
                                    <option value="4">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-description">Add a description</label>
                                <textarea name="media-description" class="form-control" style="height: 80px;"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
            <a href="#" class="btn btn-success" data-dismiss="modal">Add media</a>


        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->