@using Qbicles.BusinessRules;
@using Qbicles.Models.Trader;
@model List<TraderLocation>
@{
    var canDel = Model.Count == 1 ? "disabled" : "";
    var dateFormat = (string)ViewBag.CurrentDateFormat;
}

<div class="well custom" style="padding-bottom: 5px;">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-lg-3">
            <div class="form-group">
                <label for="search">Search</label>
                <input type="text" class="form-control" id="location-tab-key-search">
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
            <div class="form-group">
                <label for="search">Geolocated</label>
                <select name="type" class="form-control select2" id="location-tab-geolocated" style="width: 100%;">
                    <option value="0" selected>Show all</option>
                    <option value="1">Only geolocated</option>
                    <option value="2">Only non-geolocated</option>
                </select>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
            <div class="form-group">
                <label for="search">Options</label><br />
                <button type="button" onclick="clickAddlocation()" data-toggle="modal" data-target="#app-location-add" class="btn btn-success">
                    <i class="fa fa-plus"></i> &nbsp; Add a location
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Locations -->
<div class="tab-pane fade in active" id="tab-locations">

    <div class="activity-overview task" style="padding: 20px;">
        <table id="tbllocations" class="table-hover datatable" data-order='[[0, "asc"]]'style="width: 100%; background: #fff;">
            <thead>
                <tr>
                    <th>Location</th>
                    <th>Address</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Geolocated</th>
                    <th>Created</th>
                    <th>Creator</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>

        <br />
        @*<a href="javascript:void(0)" class="btn btn-success" data-toggle="modal" onclick="clickAddlocation()" data-target="#app-location-add"><i class="fa fa-plus"></i> &nbsp; Add new</a>*@
    </div>


</div>
<!-- END Locations -->

<div class="modal fade left" id="app-location-add" role="dialog" aria-labelledby="app-location-add">

</div>
<!-- /.modal Add new location-->


<div class="modal fade" id="app-location-confirm" role="dialog" aria-labelledby="app-location-confirm">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title">Delete location</h5>
            </div>
            <div class="modal-body">
                <div class="col-xs-12 col-sm-12" style="margin-bottom: 30px;">
                    <span id="label-confirm-location"></span>
                    <input class="hidden" id="id-itemlocation-delete" />
                </div>

                <button class="btn btn-success" data-dismiss="modal" onclick="deletelocation()"><i class="fa fa-check"></i> &nbsp; OK</button>
                <button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-remove"></i> &nbsp; Cancel</button>

            </div>
        </div> <!-- /.modal-content -->
    </div> <!-- /.modal-dialog -->
</div>
@{
    if (System.Diagnostics.Debugger.IsAttached)
    {
        <script src="~/Scripts/dev/trader.config.location.js"></script>

    }
    else
    {
        <script src="~/Scripts/dev/trader.config.location.js"></script>

    }
}