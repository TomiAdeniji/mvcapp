@using Qbicles.Models.Network;
@model ShortListGroup

<input type="hidden" id="group-id" value="@(Model?.Id ?? 0)" />
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">@(Model == null || Model.Id == 0 ? "Add a Shortlist Group" : "Edit " + Model.Title + " Shortlist")</h5>
        </div>
        <form id="add-slgroup-form">
            <div class="modal-body">

                <div class="well custom">
                    <div class="form-group">
                        <label for="title">Icon</label>
                        <input type="file" id="group-icon" class="form-control" name="icon">
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="group-title" value="@(Model?.Title ?? "")" class="form-control" name="title">
                    </div>
                    <div class="form-group" style="margin: 0;">
                        <label for="summary">Summary</label>
                        <textarea name="summary" id="group-summary" class="form-control" style="max-width: 100%; height: 80px;">@(Model?.Summary ?? "")</textarea>
                    </div>
                </div>

                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button class="btn btn-success" type="submit">Confirm</button>

            </div>
        </form>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script>
    initSaveSlGroupForm();
</script>