@using Qbicles.Models.Trader.SalesChannel
@{ 
    ViewBag.Title = "My Order - B2C";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper qbicle-detail mdv2-wrapper mydesks">
    <!-- Main content -->
    <section class="mdv2 desk mydeskr1" data-tooltip-color="teal" data-tooltip-delay="300" data-tooltip-animate-function="spin">


        <!-- App bar -->
        <div class="mdv2-col-app">

            <div data-spy="affix" class="contained-sidebar">

                <div class="tab-pane fade in active" id="subapp-tracking">

                    <div class="activity-overview plain company-overview welcome-info" style="flex: none; margin: 30px 0 15px 0; padding: 20px 20px 5px 20px; text-align: left;">

                        <div class="section-detail intro-home">
                            <h2 style="font-weight: 500;">My Orders</h2>
                            <p style="color: rgba(0, 0, 0, 0.5);">Keep track of all your past and present orders.</p>
                        </div>

                    </div>


                    <div style="padding: 0 20px 15px 20px;">

                        <div class="well custom" style="padding-bottom: 5px;">
                            <div class="form-group">
                                <label for="search">Search</label>
                                <input type="text" name="search" class="form-control" autocomplete="off">
                            </div>
                            <label for="filter-store">Date range</label><br />
                            <div class="input-group" style="margin-bottom: 15px;">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input type="text" name="daterange" class="form-control daterange filter-daterange" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label for="channel">Sales channel</label>
                                <select name="channel" class="form-control select2" style="width: 100%;">
                                    <option value="0" selected>Show all</option>
                                    <option value="@((int)SalesChannelEnum.B2C)">B2C</option>
                                    <option value="@((int)SalesChannelEnum.POS)">POS</option>
                                </select>
                            </div>
                            <br />
                            <div class="checkbox toggle">
                                <label>
                                    <input name="isHideCompleted" data-toggle="toggle" data-onstyle="success" type="checkbox" checked>
                                    Hide completed orders
                                </label>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        </div>
        <!-- END App bar -->
        <!-- Main area -->
        <div class="mdv2-col-dash" style="min-width: 0;">


            <div id="tracking" class="pseudotab">

                <table class="datatable table-striped table-hover" id="tblOrders" style="width: 100%;" data-order='[[2, "desc"]]'>
                    <thead>
                        <tr>
                            <th data-priority="1" style="max-width:200px">Order</th>
                            <th data-priority="2">Store</th>
                            <th data-priority="2">Placed</th>
                            <th data-priority="3">Channel</th>
                            <th data-priority="1">Status</th>
                            <th data-priority="1" data-orderable="false" style="min-width:250px">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>

            </div>


        </div>
        <style>
            #tblOrders th{
                width: auto !important;
            }
        </style>
        <!-- END Main area -->



    </section>
    <!-- ./content -->

</div>
<div class="modal fade left" id="my-order" role="dialog" aria-labelledby="my-order" style="display: none; padding-right: 17px;">
</div>
<!-- /.content-wrapper -->
@{
    if (System.Diagnostics.Debugger.IsAttached)
    {
        <script src="~/Scripts/dev/b2c.myorders.js"></script>
    }
    else
    {
        <script src="~/Scripts/dev/b2c.myorders.min.js"></script>
    }
}