            </div>
        </div>
    </div>

@{
    if (System.Diagnostics.Debugger.IsAttached)
    {
        <script src="~/Scripts/dev/pds.preparationdisplaysystem.js"></script>
    }
    else
    {
        <script src="~/Scripts/dev/pds.preparationdisplaysystem.min.js"></script>
    }
}