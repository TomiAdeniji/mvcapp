@using Qbicles.Models.Trader.PoS
@model List<PosOrderType>
@{
    
}

<div class="well custom" style="padding-bottom: 5px;">
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="form-group">
                <label for="search">Search</label>
                <input type="text" id="order_type_search" onkeyup="searchKeyWork()" name="search" class="form-control">
            </div>
        </div>
        <div class="col-xs-12 col-sm-3">
            <label>&nbsp;</label><br />
            <button class="btn btn-success" onclick="addEditPosOrderType(0)" data-toggle="modal" data-target="#app-trader-pos-order-type-addedit"><i class="fa fa-plus"></i> &nbsp; Add an Order Type</button>
        </div>
    </div>
</div>

<br />
<table class="datatable table-striped table-hover" id="community-list" style="width: 100%;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Classification</th>
            <th>Summary</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div class="modal fade left" id="app-trader-pos-order-type-addedit" role="dialog" aria-labelledby="app-trader-pos-order-type-addedit">
    
</div><!-- /.modal -->


@{

    if (System.Diagnostics.Debugger.IsAttached)
    {
        <script src="~/Scripts/dev/pos.ordertype.js"></script>
    }
    else
    {
        <script src="~/Scripts/dev/pos.ordertype.min.js"></script>
    }
    <script>
        LoadDataByServerSide();
    </script>
}