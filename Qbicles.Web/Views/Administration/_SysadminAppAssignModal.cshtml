@using Qbicles.BusinessRules;
@model List<DomainAppAccess>
@{

}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Apps available for subscription in <span id="domain-name"></span></h5>
        </div>
        <div class="modal-body">

            <div class="well custom" style="padding-bottom: 5px;">               

                @foreach (var app in Model)
                {
                    <div class="checkbox toggle">
                        <label>
                            <input value="@app.Id" class='app-domain-access' data-toggle="toggle" data-onstyle="success" type="checkbox" @app.Checked />
                            @app.Name
                        </label>
                    </div>
                }

            </div>

            <br />
            <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
            <button type="button" onclick="SaveManageDomainApps('@ViewBag.DomainKey')" class="btn btn-success">Confirm</button>

        </div>
    </div><!-- /.modal-content -->
</div>
