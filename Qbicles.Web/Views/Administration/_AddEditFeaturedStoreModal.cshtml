@using Qbicles.Models;
@using Qbicles.Models.ProductSearch;
@model FeaturedStore
@{
    var lstDomains = (List<QbicleDomain>)ViewBag.ListDomain ?? new List<QbicleDomain>();
    var storeDomainId = Model?.Domain?.Id ?? 0;
}


<input id="featured-store-id" type="hidden" value="@(Model?.Id ?? 0)" />
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Add a featured store</h5>
        </div>
        <div class="modal-body" id="feat-store-form">

            <div class="well custom" style="padding-bottom: 5px;">
                <div class="form-group">
                    <label for="name">Choose Domain</label>
                    <select name="domain" class="form-control select2" id="featured-store-domain" style="width: 100%;" onchange="$('.catalogue').fadeIn();">
                        <option value=""></option>
                        @foreach (var domainItem in lstDomains)
                        {
                            <option value="@(domainItem.Key)" @(domainItem.Id == storeDomainId ? "selected" : "")>@domainItem.Name</option>
                        }
                    </select>
                </div>
            </div>

            <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
            <button onclick="SaveFeaturedStore()" class="btn btn-success">Confirm</button>

        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script>
    $(document).ready(function () {
        $('.select2').select2();
    })
</script>
