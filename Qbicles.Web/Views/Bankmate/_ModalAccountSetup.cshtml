@using Qbicles.Models;
@{
    var currentDomain = (QbicleDomain)ViewBag.CurrentDomain;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#@((string)ViewBag.elId)').prop('checked', false).change();"><span aria-hidden="true">×</span></button>
            <h5 class="modal-title">MyBankMate account setup</h5>
        </div>
        <div class="modal-body">
            <form id="frmBankmateAccountSetup" method="post" action="~/Bankmate/SaveBankmateAccountSetup">
                <div class="well custom">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-title">Accout name <span class="red">*</span></label>
                                <input type="text" name="NameDisplay" class="form-control" value="@(currentDomain.Name)-MyBankMate" disabled="">
                                <input type="hidden" name="Name" value="@(currentDomain.Name)-MyBankMate" />
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group" style="margin: 0;">
                                <input id="accountId" name="accountId" type="hidden" value="" required>
                                <label for="customer-account">Bookkeeping account</label><br>
                                <button type="button" onclick="LoadAccountTree()" class="btn btn-info addbtnaccount" data-toggle="modal" data-target="#app-bookkeeping-treeview">Choose account</button>
                                <p class="accountInfo" style="display: inline; padding-left: 5px; font-size: 12px;">No account selected</p>
                                <button type="button" class="btn btn-small btn-warning editbtnaccount" style="display:none" data-toggle="modal" onclick="LoadAccountTree()" data-target="#app-bookkeeping-treeview">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <label id="accountId-error" class="error" for="accountId" style="display:none">This field is required.</label>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="#" class="btn btn-danger" data-dismiss="modal" onclick="$('#@((string)ViewBag.elId)').prop('checked', false).change();">Cancel</a>
                <button type="submit" class="btn btn-success">Confirm</button>
            </form>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<script>
    $("#mbmaccount").on('hide.bs.modal', function () {
        if (BKAccount.Id==0) {
            $('#@((string)ViewBag.elId)').prop('checked', false).change();
        }
    });
</script>