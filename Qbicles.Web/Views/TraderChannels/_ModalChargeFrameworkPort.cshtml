@using Qbicles.Models.Trader
@model List<TraderLocation>
@{
    var clonePriceList = (Qbicles.Models.B2B.PriceList)ViewBag.PricelistClone;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            <h5 class="modal-title">Include this framework in another location</h5>
        </div>
        <div class="modal-body">
            <form id="frmPriceListOtherLocationClone" action="~/TraderChannels/ClonePricelist" method="post">
                <div class="choose-location">

                    <div class="activity-overview generic help-text animated bounce">
                        <i class="fa fa-info-circle"></i>
                        <p>
                            You can quickly migrate this price list to your other locations using this tool. Simply indicate which location you want to apply this pricing to, and it will
                            be automatically added to the list of available charge frameworks at the other location.
                        </p>
                    </div>


                    <div class="well custom" style="padding-bottom: 5px;">
                        <div class="form-group">
                            <label for="locationId">Which location you want to add to?</label>
                            <select name="locationId" class="form-control select2" style="width: 100%;" tabindex="-1" aria-hidden="true">
                                <option value=""></option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Id" @(item.Id == clonePriceList.Location.Id ? "disabled" : "")>@item.Name @(item.Id == clonePriceList.Location.Id ? "(current)" : "")</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="title">Title in new location</label>
                            <input type="hidden" name="cloneId" value="@clonePriceList.Id" />
                            <input type="text" name="cloneName" class="form-control" value="@clonePriceList.Name">
                        </div>
                    </div>

                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm</button>
                </div>
            </form>

        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
