@using Qbicles.Models;
@using Qbicles.Models.SalesMkt;
@model IdeaTheme
@{
    var setting = (Settings)ViewBag.Setting;
    var Folder = Model.ResourceFolder;
    var qbicleTopics = (List<Topic>)ViewBag.QbicleTopics;
}
<div class="modal fade left" id="create-resource" role="dialog" aria-labelledby="create-resource">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title">Add a Resource</h5>
            </div>
            <div class="modal-body">
                <form id="form_media_sm_idea_resource" enctype="multipart/form-data">
                    <div class="well custom">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="media-title">Document name</label>
                                    <input type="text" name="name" required class="form-control">
                                    <input type="hidden" value="@setting.SourceQbicle.Id" id="media-qbicleId" />
                                    <input type="hidden" id="sm-idea-resource-object-key" name="mediaObjectKey" />
                                    <input type="hidden" id="sm-idea-resource-object-name" name="mediaObjectName" />
                                    <input type="hidden" id="sm-idea-resource-object-size" name="mediaObjectSize" />
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="topic">Choose a topic</label>
                                    <select name="topicId" class="form-control select2" style="width: 100%;">
                                        @foreach (var item in qbicleTopics)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="account_number">Choose a file</label>
                                    <input type="file" class="form-control previewimgresource" id="sm-idea-resource-upload-image" data-target='#preview'>
                                </div>

                                <img id="preview" src="" alt="Your image" style="display: none; width: 100%; height: auto; margin-bottom: 30px;" />
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="tags">Destination folder</label>
                                    <select name="mediaFolder" class="form-control select2" style="width: 100%;" disabled>
                                        <option value="@Folder.Id" selected>@Folder.Name</option>
                                    </select>
                                    <input type="hidden" value="@Folder.Id" id="hdfmediaFolderId" name="mediaFolderId" />
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label for="media-description">Add a description</label>
                                    <textarea name="description" class="form-control" required style="height: 80px;"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
                    <button class="btn btn-success" type="button" onclick="SocialMarketingIdeaMediaSave(@setting.SourceQbicle.Id)" >Add media</button>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
