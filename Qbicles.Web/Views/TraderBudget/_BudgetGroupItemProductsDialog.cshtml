@using Qbicles.Models.Trader
@using Qbicles.Models.Trader.Budgets
@model List<TraderItem>
@{
    var budgetTitle = (string)ViewBag.BudgetGroupTitle;
    var api = (string)ViewBag.DocRetrievalUrl;
}

<div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Items in Budget Group @budgetTitle</h5>
        </div>
        <div class="modal-body">

            <table class="datatable table-striped table-hover" id="community-list" style="width: 100%;" data-order='[[1, "asc"]]'>
                <thead>
                    <tr>
                        <th data-priority="3" data-orderable="false" style="width: 40px;"></th>
                        <th data-priority="1">Name</th>
                        <th data-priority="2">SKU</th>
                        <th data-priority="3">Product Group</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="table-avatar mini" style="background-image: url('@api@item.ImageUri');"></div>
                            </td>
                            <td>@item.Name</td>
                            <td>@item.SKU</td>
                            <td>@item.Group.Name</td>
                        </tr>
                    }
                </tbody>
            </table>


            <br /><br />
            <button class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<script>
    $('#community-list').DataTable().draw();
</script>