@using Qbicles.Models.UserInformation;
@model UserProfileFile

<input type="hidden" id="file-id" value="@(Model?.Key ?? "0")" />
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Add a file to your profile</h5>
        </div>
        <div class="modal-body">
            <form id="save-profilefile-form">
                <div class="well custom">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-title">Name</label>
                                <input type="text" id="file-title" name="title" value="@(Model?.Title ?? "")" class="form-control">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="account_number">Choose a file</label>
                                <input type="file" id="file-upload" @(Model!=null&&Model.Id>0?"":"required") class="form-control previewimg" name="featuredimg" data-target='#preview' onchange="simulateupload();">
                            </div>

                            <div class="activity-overview generic help-text animated bounce upload-success" style="display: none;">
                                <i class="fa fa-check-circle"></i>
                                <p>Your file has been successfully uploaded!</p>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-description">Add a description</label>
                                <textarea name="description" id="file-description" class="form-control" style="height: 80px;">@(Model?.Description ?? "")</textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
                <button class="btn btn-success" type="submit">Confirm</button>
            </form>

        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script>
    initSaveProfileFileForm();
</script>