@using Qbicles.Models.Highlight
@model PropertyExtras
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <input type="hidden" id="propertyExtraId" value="@(Model?.Id ?? 0)" />
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @if (Model == null)
            {
                <h5 class="modal-title">Add new Property Extra</h5>
            }
            else
            {
                <h5 class="modal-title">Edit Property Extra</h5>
            }

        </div>
        <div class="modal-body">
            <form class="form-group" id="form-propertyextra">
                <div class="well custom">

                    <div class="row">

                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="safe-name">Property Extra Name <span class="red">*</span></label>
                                <input type="text" name="Name" id="property-extra-name" required class="form-control" value="@(Model?.Name ?? "")">
                            </div>
                        </div>
                    </div>

                </div>

                <br />
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Confirm</button>

            </form>

        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

@if (System.Diagnostics.Debugger.IsAttached)
{
    <script src="~/Scripts/dev/administration.hlsetup.js"></script>
}
else
{
    <script src="~/Scripts/dev/administration.hlsetup.min.js"></script>
}

<script>
    $(document).ready(function () {
        initPropertyExtraFormToSave();
    });
</script>
