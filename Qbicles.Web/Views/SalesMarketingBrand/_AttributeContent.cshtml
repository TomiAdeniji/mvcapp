@model List<Qbicles.Models.SalesMkt.Attribute>
@{
    var api = (string)ViewBag.DocRetrievalUrl;
}
@foreach (var item in Model)
{
    <article class="col @(item.IsHidden?"brand-attribute-hidden":"")">
        <div class="avatar" style="background-image: url('@(api+item.Icon + "&size=T")');">&nbsp;</div>

        <div class="btn-group optsnew defaulted dropdown">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-cog"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="javascript:void(0)" onclick="SocialBrandAttributeEdit(@item.Id)">Edit</a></li>
                <li><a href="javascript:void(0)" onclick="ShowOrHideBrandAttribute(@item.Id)">@(item.IsHidden?"Show":"Hide")</a></li>
            </ul>
        </div>

        <a href="javascript:void(0)" onclick="SocialBrandAttributeEdit(@item.Id)">
            <h1 style="color: #333; margin-top: 15px;">@item.Name</h1>
        </a>
        <p class="qbicle-detail" style="text-align: center;">
            @item.Summary
        </p>
    </article>
}
