@using Qbicles.Models.SalesMkt;
@using Qbicles.BusinessRules;
@model List<BrandProduct>
@{
    var api = (string)ViewBag.DocRetrievalUrl;
}
<div style="padding: 30px;">
    <div class="flex-grid-quarters-lg qbicles-dash-grid marketing restyle" data-tooltip-color="slate" data-tooltip-stickto="right">
        @foreach (var item in Model)
        {
            <article class="col @(item.IsHidden?"brand-product-hidden":"")">
                <div class="avatar" style="background-image: url('@(api+item.FeaturedImageUri + "&size=T")');">&nbsp;</div>

                <div class="btn-group optsnew defaulted dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-cog"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="javascript:void(0)" onclick="SocialBrandProductLoadEdit(@item.Id)">Edit</a></li>
                        <li><a href="javascript:void(0)" onclick="ShowOrHideBrandProduct(@item.Id)">@(item.IsHidden? "Show": "Hide")</a></li>
                    </ul>
                </div>
                <a href="javascript:void(0)" onclick="SocialBrandProductLoadEdit(@item.Id)">
                    <h1 style="color: #333; margin-top: 15px;">@item.Name</h1>
                </a>
                <p class="qbicle-detail" style="text-align: center;">@item.Summary</p>
            </article>
        }
    </div>
</div>



