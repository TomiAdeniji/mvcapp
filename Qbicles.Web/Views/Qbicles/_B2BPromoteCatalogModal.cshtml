@using Qbicles.Models.Catalogs
@model List<Catalog>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title">Add a Catalogue</h5>
        </div>
        <div class="modal-body">

            <div class="well custom" style="padding-bottom: 5px;">
                <form name="qbicle-creation">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-title">Choose catalogue to promote</label>
                                <select name="menu" id="list-catalog" class="form-control select2" style="width: 100%;">
                                    <option value=""></option>
                                    @foreach (var catalogItem in Model)
                                    {
                                        <option value="@catalogItem.Id">@catalogItem.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="media-description">Add a covering note</label>
                                <textarea name="qbicle-description" id="covering-note" class="form-control" style="height: 80px; max-width: 100%;"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
            <button class="btn btn-success" onclick="saveB2BCatalogDiscussion()">Confirm</button>


        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
