@using Qbicles.Models;
@model QbiclePost
@{
    var api = (string)ViewBag.DocRetrievalUrl;
    var topics = (List<Topic>)ViewBag.QbicleTopics;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            <h5 class="modal-title">Edit your post</h5>
        </div>
        <div class="modal-body">
            <form id="frmEditPost">
                <div class="well custom" style="padding-bottom: 5px;">
                    <div class="form-group">
                        <label for="name">Content</label>
                        <input type="hidden" name="PostKey" value="@Model.Key" />
                        <textarea name="postcontent" required class="form-control" style="max-width: 100%; height: 80px;">@Model.Message</textarea>
                    </div>
                    <div class="form-group">
                        <label for="name">Topic</label>
                        <select name="topic" required class="form-control select2" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            @foreach (var item in topics)
                            {
                                <option value="@item.Id" @(Model.Topic.Id == item.Id ? "selected" : "")>@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Confirm</button>
            </form>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->