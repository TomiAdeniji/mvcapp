    if (System.Diagnostics.Debugger.IsAttached)
    {
        <script src="~/Scripts/dev/qbicle.discussion-qb.js"></script>
    }
    else
    {
        <script src="~/Scripts/dev/qbicle.discussion-qb.min.js"></script>
    }
