@using Qbicles.Models;
@model List<Qbicle>
@{ 
    var api = (string)ViewBag.DocRetrievalUrl;
}
<div class="modal fade left" id="forward-to-qbicle" role="dialog" aria-labelledby="forward-to-qbicle" style="display: none;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h5 class="modal-title">Forward your post to another Qbicle</h5>
            </div>
            <div class="modal-body">
                <form id="frmForwardPost">
                    <div class="well custom" style="padding-bottom: 5px;">
                        <input type="hidden" name="PostKey" value=""/>
                        <div class="form-group avatarpickermini">
                            <label for="destinationQbicle">Choose a destination Qbicle</label>
                            <select name="destinationQbicle" required class="form-control select2avatar select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                                <option value=""></option>
                                @foreach (var item in Model)
                                {
                                    <option data-iconurl="@(api+item.LogoUri+"&size=T")" value="@item.Key">@item.Name</option>
                                }
                            </select>
                        </div>

                    </div>

                    <br>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm</button>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
