<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.5, maximum-scale=1.0, user-scalable=yes" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- GD New addition to load Roboto font -->
    <style type="text/css">
        @string.Format("@")import url("https://fonts.googleapis.com/css?family=Roboto:400);
    </style>
    <!-- GD END New addition -->

    @Styles.Render("~/Content/css")

    @RenderSection("css", required: false)

    <meta name="description" content="Asp.net mvc document viewer free sample code in C# and vb.net. View office documents and pdf files online in asp.net" />
</head>
<body>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-1.9.1.min.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)
</body>
</html>